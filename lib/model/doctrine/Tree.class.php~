class Tree extends BaseTree
{
  function isHome()
  {
    if($this->getContainerId()==0)return true;else return false;
  }
  public function getParentFile()
  {
    return Doctrine_Query::create()
      ->from('file f')
      ->where('f.id='.$this->getParentFileId())
      ->fetchOne();
  }
  public function getChildFile()
  {
    return Doctrine_Query::create()
      ->from('tree t')
      ->where('f.id='.$this->getChildFileId())
      ->fetchOne();
  }
}
